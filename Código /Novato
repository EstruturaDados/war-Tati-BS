#include <stdio.h>
#include <string.h>

// Definição da struct Territorio, que agrupa dados relacionados a um território
struct Territorio {
    char nome[30];   // Nome do território
    char cor[10];    // Cor do exército
    int tropas;      // Número de tropas
};

int main() {
    // Declaração de um vetor de 5 estruturas do tipo Territorio
    struct Territorio territorios[5];

    // Entrada de dados dos 5 territórios
    for (int i = 0; i < 5; i++) {
        printf("\nCadastro do Território %d:\n", i + 1);

        printf("Digite o nome do território: ");
        scanf("%29s", territorios[i].nome); // Lê string com limite

        printf("Digite a cor do exército: ");
        scanf("%9s", territorios[i].cor); // Lê string curta

        printf("Digite o número de tropas: ");
        scanf("%d", &territorios[i].tropas); // Lê um número inteiro
    }

    // Exibição dos dados cadastrados
    printf("\n===== Dados dos Territórios Cadastrados =====\n");

    for (int i = 0; i < 5; i++) {
        printf("\nTerritório %d:\n", i + 1);
        printf("Nome: %s\n", territorios[i].nome);
        printf("Cor do Exército: %s\n", territorios[i].cor);
        printf("Número de Tropas: %d\n", territorios[i].tropas);
    }

    return 0;
}

